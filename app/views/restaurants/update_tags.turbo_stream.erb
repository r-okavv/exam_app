<turbo-stream action="replace" target="tags-section">
  <template>
    <div id="tags-section">
      <% if @restaurant.tags.present? %>
          <% @restaurant.tags.each do |tag| %>
              <%= tag.name %>
              <%= link_to '削除', remove_tag_restaurant_path(@restaurant, tag_name: tag.name), data: { turbo: true, turbo_method: :delete } %>
          <% end %>
          <%= link_to 'タグ編集', tags_restaurant_path(@restaurant), data: { turbo: true, turbo_frame: "tags-section" } %>
      <% else %>
          <%= link_to 'タグを登録する', tags_restaurant_path(@restaurant), data: { turbo: true, turbo_frame: "tags-section" } %>
      <% end %>
    </div>
  </template>
</turbo-stream>


