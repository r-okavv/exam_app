<% if restaurants.present? %>
<div class="flex justify-between items-center mb-6">
  <p class="text-xl font-bold"><%= t 'restaurants.search.result' %></p>
  <div>
    <label for="sort-options" class="mr-2"><%= t 'restaurants.search.sorting' %>:</label>
    <select id="sort-options" class="input input-bordered">
      <option value="default"><%= t 'restaurants.search.default_sort' %></option>
      <option value="total_ratings"><%= t 'restaurants.search.total_ratings_disc' %></option>
      <option value="bookmarks"><%= t 'restaurants.search.bookmark_disc' %></option>
    </select>
  </div>
</div>
<div class="container mx-auto", id="restaurant-list">
  <%= render restaurants %>
</div>
<div class="mt-4 mb-6 text-center">
  <%= paginate restaurants %>
</div>
<div class="mt-4 mb-6 text-center">
  <button id="select-candidate-button" class="btn btn-secondary"><%= t 'restaurants.search.start_select' %></button>
  <button id="random-button" class="btn btn-secondary mb-2 hidden"><%= t 'restaurants.search.exec_random_select' %></button>
  <div class="mb-6 hidden" id="check-all-container">
    <%= check_box_tag 'check_all', '1', false, id: 'check-all' %>
    <%= label_tag 'check_all', '全てのお店を選択' %>
  </div>
  <p id="instruction" class="hidden"><%= t 'restaurants.search.instruction_for_select' %></p>
</div>
<% end %>
