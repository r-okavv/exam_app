<turbo-stream action="replace" target="tags-section">
  <template>
    <% if @restaurant.tags.present? %>
      <% @restaurant.tags.each do |tag| %>
        <%= tag.name %>
        <%= link_to '削除', remove_tag_restaurant_path(@restaurant, tag_name: tag.name), method: :post, data: { turbo: true } %>
      <% end %>
      <%= link_to 'タグ編集', tags_restaurant_path(@restaurant), data: { turbo: true } %>
    <% else %>
      <%= link_to 'タグ追加', new_tags_restaurant_path(@restaurant), data: { turbo: true } %>
    <% end %>
  </template>
</turbo-stream>