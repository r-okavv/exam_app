<div class="flex-grow flex justify-center">
  <div class="container mx-auto px-4 py-4">
    <h1 class="text-2xl font-bold mt-8 mb-8"><%= t '.title' %></h1>

    <% if @bookmark_restaurants.present? %>
        <%= render @bookmark_restaurants %>
      <div class="mt-4 mb-6 text-center">
        <%= paginate @paginated_bookmarks %>
      </div>
    <% else %>
      <p><%= t'.no_result' %></p>
    <% end %>
  </div>
</div>
