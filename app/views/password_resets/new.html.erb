<div class="flex-grow flex items-center justify-center">
  <div class="container px-2 py-4">
    <div class="w-full md:w-10/12 md:mx-auto lg:w-8/12 lg:mx-auto px-4">
      <h1 class="text-2xl font-bold mb-4"><%= t '.title' %></h1>
      <p class="py-4">ご登録のメールアドレスを入力してください。</p>
      <%= form_with url: password_resets_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :email, User.human_attribute_name(:email), class: 'block text-sm font-medium text-gray-700' %>
          <%= f.email_field :email, class:"input input-bordered w-full max-w-sm"  %>
        </div>
        <%= f.submit t('password_resets.new.submit'), class: 'btn btn-primary font-bold py-2 px-4' %>
      <% end %>
    </div>
  </div>
</div>
